<div class="heading">
  <div class="container">
    好多论坛
  </div>
</div>
<div class="issue-list">
  <div class="issue-action">
    <a class="check-cards" href="http://card.happyec.org">先看卡片</a>
     <i class="fa fa-arrow-right"></i>
    后提问
    <% if current_user %>
      <a href="q/new" class="new-q-btn">
        <i class="fa fa-pencil"></i>
      </a>
    <% else %>
      <a href="/login" class="new-q-btn">
        <i class="fa fa-pencil"></i>
      </a>
    <% end %>
  </div>
  <% @issues.each do |i| %>
    <article class="issue clearfix">
      <div class="state-light"></div>
      <div class="body">
        <div class="title">
          <%= link_to i.title, "q/#{i.id}" %>
        </div>
        <div class="meta-data">
          <%= i.user.name %> <%= i.comments.count %>评论
        </div>
      </div>
      <div class="time">
        <%= time_ago_in_words(i.created_at) %>前
      </div>
    </article>
  <% end %>
</div>
